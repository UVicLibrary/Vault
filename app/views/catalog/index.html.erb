<%# OVERRIDE Hyrax 4.0, which overrides blacklight 7.38 - add Advanced Search link at the bottom %>
<div class="row mt-4">
  <div id="content" class="order-sm-1 order-md-2 col-md-9 col-sm-12">
    <%= render 'search_results' %>
  </div>

  <div id="sidebar" class="order-sm-2 order-md-1 col-md-3 col-sm-12">
    <%= render 'search_sidebar' %>
    <% if request.base_url.include? "vault" %>
      <%= link_to "Advanced Search", "/advanced", class: "advanced-search-link", data: { turbolink: false } %>
    <% end %>
  </div>
</div>
