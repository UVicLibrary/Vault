<% if request.base_url.include? 'iaff' %>
	<%= f.input key,
            as: :controlled_vocabulary,
            placeholder: 'Search for a name',
            input_html: {
              class: 'form-control',
              data: { 'autocomplete-url' => "/authorities/search/local/iaff_test",
                      'autocomplete' => key }
            },
            ### Required for the ControlledVocabulary javascript:
            wrapper_html: { data: { 'autocomplete-url' => "/authorities/search/local/iaff_test",
                                    'field-name' => key }},
            required: f.object.required?(key) %>
<% else %>
  <% if f.object.class.multiple? key %>
		<%= f.input key, as: :multi_value, input_html: { class: 'form-control' }, required: f.object.required?(key) %>
	<% else %>
		<%= f.input key, required: f.object.required?(key) %>
	<% end %>
<% end %>