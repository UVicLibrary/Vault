<%= f.input key,
          as: :multi_value,
          placeholder: 'Search for a subject',
          input_html: {
            class: 'form-control',
            data: { 'autocomplete-url' => "/authorities/search/local/iaff_subject",
                    'autocomplete' => key }
          },
          ### Required for the ControlledVocabulary javascript:
          wrapper_html: { data: { 'autocomplete-url' => "/authorities/search/local/iaff_subject",
                                  'field-name' => key }},
          required: f.object.required?(key) %>