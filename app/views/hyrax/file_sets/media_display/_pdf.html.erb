<% if Hyrax.config.display_media_download_link? %>
    <div>
      <h2 class="sr-only"><%= t('hyrax.file_set.show.downloadable_content.heading') %></h2>
      <iframe src="<%= pdfjs.full_path(file: hyrax.download_path(file_set)) %>"style='width: 75vw; height: 100vw; overflow: hidden;' scrolling="no">
      <%#= pdfjs_viewer pdf_url:  hyrax.download_path(file_set), style: :full %>
      
      
      </iframe>
      <%= link_to t('hyrax.file_set.show.downloadable_content.pdf_link'),
                  hyrax.download_path(file_set),
                  data: { turbolinks: false },
                  target: :_blank,
                  id: "file_download",
                  data: { label: file_set.id } %>
    </div>
<% else %>
    <div>
      <%= image_tag thumbnail_url(file_set),
                    class: "representative-media",
                    alt: "",
                    role: "presentation" %>
    </div>
<% end %>
