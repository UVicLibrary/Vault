<%  array_of_ids = presenter.list_of_item_ids_to_display %>
<%  members = presenter.member_presenters_for(array_of_ids) %>
<% if members.present? %>
<div class="items-container">
    <table class="table table-striped related-files">
      <thead>
      <tr>
        <th><%= t('.thumbnail') %></th>
        <th><%= t('.title') %></th>
        <th><%= t('.date_uploaded') %></th>
        <th><%= t('.visibility') %></th>
        <% if can?(:edit, presenter.id) or presenter.downloadable? or request.base_url.exclude? "vault" %><%# only show the actions column if the user can perform any actions %>
          <th><%= t('.actions') %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <%= render partial: 'member', collection: members %>
      </tbody>
    </table>
<% elsif can? :edit, presenter.id %>
  <div class="alert alert-warning" role="alert"><%= t('.empty', type: presenter.human_readable_type) %></div>
<% else %>
  <div class="alert alert-warning" role="alert"><%= t('.unauthorized', type: presenter.human_readable_type) %></div>
<% end %>
</div>
<div class="row">
  <% if presenter.total_pages > 1 %>
    <div class="row record-padding col-md-9">
      <div class="fullscrn_pagination"><%= paginate array_of_ids, window: 4, outer_window: 0, theme: 'blacklight', param_name: :page, route_set: main_app %></div>
      <div class="mblview_pagination"><%= paginate array_of_ids, window: 1, outer_window: 0, theme: 'blacklight', param_name: :page, route_set: main_app %></div>
    </div><!-- /pager -->
  <% end %>
</div>