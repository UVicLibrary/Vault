<div class="work-title-wrapper">
  <% presenter.title.each_with_index do |title, index| %>
    <% if index == 0 %>
      <div class="title-with-badges">
        <h1><%= title %></h1>
        <!-- OVERRIDE Hyrax 4.0.0 - check if user permissions to display visibility badges-->
        <% if badge_visibility?(presenter.solr_document) %>
          <%= presenter.permission_badge %>
        <% end %>
        <%= presenter.workflow.badge %>
      </div>
    <% else %>
      <h1><%= title %></h1>
    <% end %>
  <% end %>
</div>
