<div class="browse-card card col-lg-3 col-md-3 col-sm-4 col-xs-12">
  <%= link_to url, class: "plain-link" do %>
    <div class="wrapper" style="background: url(<%= thumbnail %>); background-size: cover; background-position: center;">
      <div class="data">
        <div class="content">
          <h2 class="browse-card-title card-title collection-card-title"><%= title %></h2>
          <p class="text">
            <% if description.present? %>
              <%= description.truncate(100, separator: /\s/) %>
            <% else %>
              No description available.
            <% end %>
          </p>
        </div><!-- .content -->
      </div><!-- .data -->
    </div><!-- .wrapper -->
  <% end %>
</div><!-- .card -->
