<!-------------- app/views/browse_everything/exhibit_card.html.erb -------------->
<div class="card browse-card col-lg-3 col-md-3 col-sm-4 col-xs-12">
  <%= link_to url, class: "plain-link" do %>
    <div class="wrapper" style="background-color: white; background: url(<%= thumbnail %>); background-size: cover; background-position: center;">
      <div class="data">
        <div class="content">
          <h2 class="card-title browse-card-title"><%= title %></h2>
          <p class="text">
            <% if subtitle.present? %>
              <%= subtitle.strip.truncate(100, separator: /\s/) %>
            <% elsif description.present? %>
              <%= description.truncate(100, separator: /\s/) %>
            <% end %>
          </p>
        </div><!-- .content -->
      </div><!-- .data -->
    </div><!-- .wrapper -->
  <% end %>
</div><!-- .card -->
