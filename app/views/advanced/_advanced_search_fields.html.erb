<%- search_fields_for_advanced_search.each do |key, field_def| -%>
  <% if key == "year range" %>
    <%= render 'custom_year_range', solr_field: "year_range_isim", key: key, field_def: field_def %>
    <% else %>
    <div class="form-group advanced-search-field">
      <%= label_tag key, "#{field_def.label }", :class => "col-md-2 col-xs-12 control-label" %>
      <div class="col-md-9 col-xs-12">
        <%= text_field_tag key, label_tag_default_for(key), :class => 'form-control' %>
      </div>
    </div>
    <% end %>
<%- end -%>