<h2>Sign in</h2>

<%- if devise_mapping.omniauthable? and request.base_url.include?("vault") %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if provider == :cas %>
      <%= link_to 'Sign in with UVic account', user_cas_omniauth_authorize_path,
                  class: "btn login-button login-text", id: "sign-in-with-uvic", method: :post %><br />
    <% end %>
  <% end -%>
<% end -%>

<div class="container">
  <div class="row">
    <div class="col-md-3" style="padding-left: 0px;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group email-form-group">
          <%= f.label :email, class: "sign-in-text" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group password-form-group">
          <%= f.label :password, class: "sign-in-text" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group remember-form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "sign-in-text" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Sign in", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>